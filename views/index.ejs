<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
    <title>search</title>
</head>
<body>
    <div class="search">
        <input placeholder="typing your keyword" class="search_input">
        <button class="search_button">Search</button>
        <div class="search_select">
            <label>xắp xếp theo</label>
            <select class="search_select_value">
                <option value="0" selected>Giá từ thấp -> cao</option>
                <option value="1">Giá từ cao -> thấp</option>
            </select>
        </div>
    </div>
    <div id="app">
        <div class="row" id="content"></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        let arrs=[];
        let views=[];
        const btn=document.querySelector("button.search_button")
        btn.addEventListener("click",search)
        document.querySelector("input.search_input").addEventListener("keyup",(event)=>{
            if(event.keyCode==13){
                search();
            }
        })
        document.querySelector("select.search_select_value").addEventListener('change',()=>{
            update();
        })

        function search(){
            document.body.style.cursor="wait"
            const keyword=document.querySelector("input.search_input");
            const keys=(keyword.value+"").trim().split(/[;,.: ]/g).filter(x=>x&&x!=' ');
            fetch('/api/search?q='+keys.join("+")).then(res=>res.json())
            .then(result=>{
                // console.log("result",result.arrs);
                arrs=result.arrs.map(arr=>{
                    const price=getNumber(arr.price);
                    return {...arr,price}
                });
                console.log("result",arrs);
                update();
            })
            .catch(err=>{arrs=[]})
            .then(()=>{document.body.style.cursor="initial"})
        }

        function getNumber(str){
            str=str+'';
            let out=''
            for(let i=0;i<str.length;i++){
                const char=str[i];
                if(char>='0'&& char<='9') out+=char;
            }
            return parseInt(out);
        }
        function dispPrice(price){
            const out=(price).toFixed(1).replace(/\d(?=(\d{3})+\.)/g, '$&,');
            // console.log("debug",{input:price,output:out})
            return out;
        }
        /** update */
        function update(){
            const select=document.querySelector('select.search_select_value').value
            // console.log("test-select",select);
            if(select==0)  views=arrs.sort((a,b)=>a.price-b.price)
            else views=arrs.sort((a,b)=>b.price-a.price)
            build('#content')
        }

        /** build */
        function build(selector){
            const content=views.map(data=>`
                <div class='col-4 item'>
                    <img src='${data.image}' class='item_image'>
                    <a class='item_title' href=${data.url}>${data.name}</a>
                    <div class='item_price'>${dispPrice(data.price)}</div>
                </div>
            `).join("")
            document.querySelector(selector).innerHTML=content
        }
    </script>
</body>
</html>